# Configurações Básicas do Aplicativo
APP_NAME="Canabidiol Commerce"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://seusite.com
APP_TIMEZONE="America/Sao_Paulo"
APP_LOCALE="pt_BR"
APP_KEY=base64:your_32_char_random_string_here

# Configurações de Banco de Dados
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ecommerce_canabidiol
DB_USERNAME=root
DB_PASSWORD=your_secure_password_here

# Configurações de E-mail (para notificações)
MAIL_MAILER=smtp
MAIL_HOST=mail.seusite.com
MAIL_PORT=587
MAIL_USERNAME=no-reply@seusite.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=no-reply@seusite.com
MAIL_FROM_NAME="Canabidiol Commerce"

# Configurações de Sessão e Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_DRIVER=file
QUEUE_CONNECTION=database

# Configurações de Segurança
SANCTUM_STATEFUL_DOMAINS=seusite.com
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Configurações Específicas do Sistema
COMISSAO_PADRAO=10.00
DIAS_LIBERACAO_COMISSAO=30
TAXA_SAQUE_COMISSAO=2.00
PRAZO_APROVACAO_RECEITA=48 # horas

# Integração com Mercado Pago
MERCADOPAGO_KEY=your_mercadopago_public_key
MERCADOPAGO_SECRET=your_mercadopago_access_token
MERCADOPAGO_SANDBOX=false

# Integração com Trix Express
TRIX_EXPRESS_API_KEY=your_trix_api_key
TRIX_EXPRESS_API_URL=https://api.trixexpress.com.br/v1
TRIX_EXPRESS_CONTRATO=your_contract_number

# Integração com NFe.io
NFEIO_API_KEY=your_nfeio_api_key
NFEIO_ENVIRONMENT=production
NFEIO_COMPANY_ID=your_company_id

# Configurações de Upload
UPLOAD_MAX_SIZE=2048 # em KB
ALLOWED_FILE_TYPES=pdf,jpg,png
PRESCRIPTIONS_UPLOAD_PATH=storage/prescriptions/
ANVISA_UPLOAD_PATH=storage/anvisa_approvals/

# Configurações de Log
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_SLACK_WEBHOOK_URL=

# Configurações de Limite de Taxa (Rate Limiting)
RATE_LIMIT=60
RATE_LIMIT_LOGIN=5

# Configurações de CORS
CORS_ALLOWED_ORIGINS=https://seusite.com